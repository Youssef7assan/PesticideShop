@model PesticideShop.Models.CustomerTransaction

@{
    ViewData["Title"] = "تعديل المعاملة";
}

<div class="fade-in">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>✅ نجح:</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>⚠️ خطأ:</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>✏️ تعديل المعاملة</h1>
        <a asp-action="Details" asp-route-id="@Model.CustomerId" class="btn btn-secondary">
            ← العودة للعميل
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">تعديل معاملة العميل: @ViewData["CustomerName"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="EditTransaction">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CustomerId" />
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ProductId" class="form-label">المنتج *</label>
                        <select asp-for="ProductId" asp-items="ViewBag.ProductId" class="form-select" required>
                            <option value="">اختر المنتج</option>
                        </select>
                        <span asp-validation-for="ProductId" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="Quantity" class="form-label">الكمية (قطعة) *</label>
                        <input asp-for="Quantity" class="form-control" type="number" min="1" placeholder="أدخل الكمية" required />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                        <small class="text-muted">الكمية بالقطع</small>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="TotalPrice" class="form-label">الإجمالي (جنيه) *</label>
                        <div class="input-group">
                            <span class="input-group-text">ج.م</span>
                            <input asp-for="TotalPrice" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" required />
                        </div>
                        <span asp-validation-for="TotalPrice" class="text-danger"></span>
                        <small class="text-muted">إجمالي سعر المعاملة</small>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="AmountPaid" class="form-label">المدفوع (جنيه) *</label>
                        <div class="input-group">
                            <span class="input-group-text">ج.م</span>
                            <input asp-for="AmountPaid" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" required />
                        </div>
                        <span asp-validation-for="AmountPaid" class="text-danger"></span>
                        <small class="text-muted">المبلغ المدفوع</small>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Date" class="form-label">التاريخ *</label>
                        <input asp-for="Date" class="form-control" type="date" required />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="ShippingType" class="form-label">نوع الشحن</label>
                        <select asp-for="ShippingType" class="form-select">
                            <option value="">اختر نوع الشحن</option>
                            <option value="1">📦 بوسطا</option>
                            <option value="2">🚛 كايرو</option>
                            <option value="3">❌ بدون شحن</option>
                        </select>
                        <span asp-validation-for="ShippingType" class="text-danger"></span>
                        <small class="text-muted">نوع خدمة الشحن المستخدمة</small>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">الرصيد المتبقي (محسوب)</label>
                        <div class="input-group">
                            <span class="input-group-text">ج.م</span>
                            <input type="text" id="remainingBalance" class="form-control" readonly />
                        </div>
                        <small class="text-muted">الإجمالي - المدفوع</small>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@Model.CustomerId" class="btn btn-secondary">
                        ← إلغاء
                    </a>
                    <button type="submit" class="btn btn-warning">
                        ✏️ تحديث المعاملة
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const totalPriceInput = document.querySelector('input[name="TotalPrice"]');
    const amountPaidInput = document.querySelector('input[name="AmountPaid"]');
    const remainingBalanceInput = document.getElementById('remainingBalance');
    
    function calculateRemainingBalance() {
        const totalPrice = parseFloat(totalPriceInput.value) || 0;
        const discount = parseFloat(document.querySelector('input[name="Discount"]')?.value || 0);
        const amountPaid = parseFloat(amountPaidInput.value) || 0;
        const actualTotal = totalPrice - discount;
        const remaining = actualTotal - amountPaid;
        
        remainingBalanceInput.value = remaining.toFixed(2);
        
        if (remaining > 0) {
            remainingBalanceInput.classList.add('text-danger', 'fw-bold');
            remainingBalanceInput.classList.remove('text-success');
        } else {
            remainingBalanceInput.classList.add('text-success');
            remainingBalanceInput.classList.remove('text-danger', 'fw-bold');
        }
    }
    
    totalPriceInput.addEventListener('input', calculateRemainingBalance);
    amountPaidInput.addEventListener('input', calculateRemainingBalance);
    
    // Calculate on page load
    calculateRemainingBalance();
});
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 