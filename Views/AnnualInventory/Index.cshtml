        }

        .count-badge {
            padding: 8px 16px;
            border-radius: 25px;
            font-weight: 700;
            font-size: 1rem;
            color: white;
            display: inline-block;
            min-width: 40px;
            text-align: center;
            box-shadow: 0 3px 10px rgba(0,0,0,0.2);
        }

        .count-badge.danger {
            background: linear-gradient(135deg, #dc3545, #c82333);
        }

        .count-badge.warning {
            background: linear-gradient(135deg, #ffc107, #fd7e14);
        }

        .no-data {
            color: #999;
            font-style: italic;
        }

