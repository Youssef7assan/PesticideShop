            .annual-inventory-container {
                padding: 15px;
            }

            .header-background {
                padding: 20px;
            }

            .main-title {
                font-size: 2rem;
            }

            .header-actions {
                flex-direction: column;
                width: 100%;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .summary-grid {
                grid-template-columns: 1fr;
            }

            .section-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 10px;
