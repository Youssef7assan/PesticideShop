@{
    ViewData["Title"] = "تقرير الجرد السنوي - Pharaonic";
    var inventoryItems = ViewData["InventoryItems"] as List<PesticideShop.Models.Product>;
    var currentPage = (int)ViewData["CurrentPage"];
    var totalPages = (int)ViewData["TotalPages"];
    var totalItems = (int)ViewData["TotalItems"];
    var pageSize = (int)ViewData["PageSize"];
}

<div class="annual-inventory-container">
    <!-- Modern Header -->
    <div class="modern-header">
        <div class="header-background">
            <div class="header-content">
                <div class="header-icon">
                    <span class="icon-large">📊</span>
                </div>
                <div class="header-text">
                    <h1 class="main-title">تقرير الجرد السنوي - Pharaonic</h1>
                    <p class="subtitle">تقرير شامل للمخزون والأرصدة لعام @DateTime.Now.Year</p>
                </div>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("ExportToExcel")" class="btn btn-success btn-lg">
                    <span class="btn-icon">📊</span>
                    <span class="btn-text">تصدير Excel</span>
                </a>
                <a href="@Url.Action("ExportDetailedExcel")" class="btn btn-warning btn-lg">
                    <span class="btn-icon">📋</span>
                    <span class="btn-text">تصدير مفصل</span>
                </a>
                <button onclick="window.print()" class="btn btn-primary btn-lg">
                    <span class="btn-icon">🖨️</span>
                    <span class="btn-text">طباعة التقرير</span>
                </button>
            </div>
        </div>
    </div>

    @if (ViewData["DebugInfo"] != null)
    {
        <div class="debug-section">
            <div class="debug-card">
                <div class="debug-header">
                    <h3>ℹ️ معلومات تصحيح</h3>
                </div>
                <div class="debug-content">
                    <p>@ViewData["DebugInfo"]</p>
                </div>
            </div>
        </div>
    }

    <!-- Enhanced Summary Cards -->
    <div class="summary-section">
        <div class="summary-grid">
            <div class="summary-card primary">
                <div class="card-icon">💰</div>
                <div class="card-content">
                    <div class="card-value">
                        @(ViewData["TotalSales"] != null ? ((decimal)ViewData["TotalSales"]).ToString("N2") : "0.00")
                    </div>
                    <div class="card-label">إجمالي المبيعات</div>
                    <div class="card-subtitle">مبيعات سنة @DateTime.Now.Year</div>
                </div>
            </div>
            
            <div class="summary-card success">
                <div class="card-icon">💵</div>
                <div class="card-content">
                    <div class="card-value">
                        @(ViewData["NetProfit"] != null ? ((decimal)ViewData["NetProfit"]).ToString("N2") : "0.00")
                    </div>
                    <div class="card-label">صافي الربح</div>
                    <div class="card-subtitle">ربح سنة @DateTime.Now.Year</div>
                </div>
            </div>
            
            <div class="summary-card info">
                <div class="card-icon">📊</div>
                <div class="card-content">
                    <div class="card-value">
                        @(ViewData["ProfitMargin"] != null ? ((decimal)ViewData["ProfitMargin"]).ToString("N1") : "0.0")%
                    </div>
                    <div class="card-label">هامش الربح</div>
                    <div class="card-subtitle">نسبة الربح</div>
                </div>
            </div>
            
            <div class="summary-card warning">
                <div class="card-icon">📦</div>
                <div class="card-content">
                    <div class="card-value">
                        @(ViewData["TotalInventoryValue"] != null ? ((decimal)ViewData["TotalInventoryValue"]).ToString("N2") : "0.00")
                    </div>
                    <div class="card-label">قيمة المخزون</div>
                    <div class="card-subtitle">قيمة البضائع المتوفرة</div>
                </div>
            </div>
            
            <div class="summary-card secondary">
                <div class="card-icon">📦</div>
                <div class="card-content">
                    <div class="card-value">
                        @(inventoryItems?.Count ?? 0)
                    </div>
                    <div class="card-label">عدد المنتجات</div>
                    <div class="card-subtitle">إجمالي المنتجات</div>
                </div>
            </div>
            
            <div class="summary-card danger">
                <div class="card-icon">↩️</div>
                <div class="card-content">
                    <div class="card-value">
                        @(ViewData["ReturnValue"] != null ? ((decimal)ViewData["ReturnValue"]).ToString("N2") : "0.00")
                    </div>
                    <div class="card-label">المرتجعات</div>
                    <div class="card-subtitle">@(ViewData["ReturnTransactionsCount"] ?? 0) معاملة إرجاع</div>
                </div>
            </div>
            
            <div class="summary-card warning">
                <div class="card-icon">🔄</div>
                <div class="card-content">
                    <div class="card-value">
                        @(ViewData["ExchangeValue"] != null ? ((decimal)ViewData["ExchangeValue"]).ToString("N2") : "0.00")
                    </div>
                    <div class="card-label">الاستبدالات</div>
                    <div class="card-subtitle">@(ViewData["ExchangeTransactionsCount"] ?? 0) معاملة استبدال</div>
                </div>
            </div>
            
            <div class="summary-card success">
                <div class="card-icon">🛍️</div>
                <div class="card-content">
                    <div class="card-value">
                        @(ViewData["GrossSales"] != null ? ((decimal)ViewData["GrossSales"]).ToString("N2") : "0.00")
                    </div>
                    <div class="card-label">إجمالي المبيعات</div>
                    <div class="card-subtitle">قبل الاسترجاع والاستبدال</div>
                </div>
            </div>
            
            <div class="summary-card secondary">
                <div class="card-icon">👥</div>
                <div class="card-content">
                    <div class="card-value">
                        @(ViewData["TotalCustomers"] ?? 0)
                    </div>
                    <div class="card-label">العملاء النشطين</div>
                    <div class="card-subtitle">إجمالي العملاء المسجلين</div>
                </div>
            </div>
            
        </div>
    </div>

    <!-- Enhanced Tables Section -->
    <div class="tables-section">
        <!-- Inventory Table -->
        <div class="table-section">
            <div class="section-header">
                <div class="header-left">
                    <h3 class="section-title">📦 المخزون الحالي</h3>
                    <span class="section-subtitle">إجمالي المنتجات: @(inventoryItems?.Count ?? 0)</span>
                </div>
                <div class="header-right">
                    <span class="total-value">إجمالي القيمة: @(ViewData["TotalInventoryValue"] != null ? ((decimal)ViewData["TotalInventoryValue"]).ToString("N2") : "0.00") جنيه</span>
                </div>
            </div>
            
            @if (inventoryItems?.Any() == true)
            {
                <div class="table-container">
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th>📦 المنتج</th>
                                <th>🏷️ الفئة</th>
                                <th>📊 الكمية</th>
                                <th>💰 السعر</th>
                                <th>💵 القيمة</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in inventoryItems)
                            {
                                var totalValue = item.Price * item.Quantity;
                                <tr>
                                    <td class="product-name">
                                        <div class="product-info">
                                            <span class="product-name-text">@item.Name</span>
                                            @if (!string.IsNullOrEmpty(item.Notes))
                                            {
                                                <small class="product-description">@item.Notes</small>
                                            }
                                        </div>
                                    </td>
                                    <td class="category-cell">
                                        <span class="category-badge @(item.Category?.Name?.Contains("مبيد") == true ? "pesticide" : "fertilizer")">
                                            @(item.Category?.Name ?? "غير محدد")
                                        </span>
                                    </td>
                                    <td class="quantity-cell">
                                        <span class="quantity-badge @(item.Quantity > 0 ? "in-stock" : "out-of-stock")">
                                            @item.Quantity
                                        </span>
                                    </td>
                                    <td class="price-cell">@item.Price.ToString("N2") جنيه</td>
                                    <td class="total-value-cell">
                                        <span class="value-badge">@totalValue.ToString("N2") جنيه</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <!-- Pagination Controls -->
                @if (totalPages > 1)
                {
                    <div class="pagination-container">
                        <div class="pagination-info">
                            <span>عرض @((currentPage - 1) * pageSize + 1) إلى @(Math.Min(currentPage * pageSize, totalItems)) من @totalItems منتج</span>
                        </div>
                        <div class="pagination-controls">
                            @if (currentPage > 1)
                            {
                                <a href="@Url.Action("Index", new { page = 1 })" class="pagination-btn first">⏮️ الأولى</a>
                                <a href="@Url.Action("Index", new { page = currentPage - 1 })" class="pagination-btn prev">◀️ السابقة</a>
                            }
                            
                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <a href="@Url.Action("Index", new { page = i })" class="pagination-btn @(i == currentPage ? "active" : "")">@i</a>
                            }
                            
                            @if (currentPage < totalPages)
                            {
                                <a href="@Url.Action("Index", new { page = currentPage + 1 })" class="pagination-btn next">▶️ التالية</a>
                                <a href="@Url.Action("Index", new { page = totalPages })" class="pagination-btn last">⏭️ الأخيرة</a>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">📦</div>
                    <h4>لا توجد منتجات في المخزون</h4>
                    <p>لم يتم إضافة أي منتجات بعد.</p>
                </div>
            }
        </div>



    <!-- Enhanced Report Footer -->
    <div class="report-footer">
        <div class="footer-card">
            <div class="footer-content">
                <div class="footer-info">
                    <h4>تم توليد التقرير بتاريخ @DateTime.Now.ToString("yyyy/MM/dd")</h4>
                    <p>نظام إدارة متجر Pharaonic</p>
                </div>
                <div class="footer-stats">
                    <div class="stat-item">
                        <span class="stat-label">إجمالي المنتجات:</span>
                        <span class="stat-value">@(inventoryItems?.Count ?? 0)</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">إجمالي العملاء:</span>
                        <span class="stat-value">@(ViewData["TotalCustomers"] ?? 0)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

