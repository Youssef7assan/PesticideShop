            margin: 0 0 8px 0;
            font-size: 1.3rem;
            font-weight: 700;
        }

        .footer-info p {
            margin: 0;
            opacity: 0.9;
            font-size: 1rem;
        }

        .footer-stats {
            display: flex;
            gap: 25px;
        }

        .stat-item {
            text-align: center;
        }

        .stat-label {
            display: block;
            font-size: 1rem;
            opacity: 0.8;
            margin-bottom: 8px;
        }

        .stat-value {
            font-size: 1.3rem;
            font-weight: 800;
        }

