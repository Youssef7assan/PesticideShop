@model PesticideShop.Models.Category

@{
    ViewData["Title"] = "تفاصيل التصنيف";
}

<div class="page-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-title">
                <h1>🏷️ تفاصيل التصنيف</h1>
                <p>عرض معلومات التصنيف والمنتجات المرتبطة به</p>
            </div>
            <div class="header-actions">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="action-button warning">
                    ✏️ تعديل التصنيف
                </a>
                <a asp-action="Index" class="action-button secondary">
                    ← العودة للتصنيفات
                </a>
            </div>
        </div>
    </div>

    <!-- Category Details -->
    <div class="details-container">
        <div class="details-card">
            <div class="details-header">
                <h2>@Model.Name</h2>
                <span class="status-badge @(Model.IsActive ? "active" : "inactive")">
                    @(Model.IsActive ? "نشط" : "غير نشط")
                </span>
            </div>
            
            <div class="details-content">
                <div class="info-section">
                    <h3>📋 معلومات التصنيف</h3>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>اسم التصنيف:</label>
                            <span class="value">@Model.Name</span>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="info-item">
                                <label>الوصف:</label>
                                <span class="value description">@Model.Description</span>
                            </div>
                        }
                        
                        <div class="info-item">
                            <label>تاريخ الإنشاء:</label>
                            <span class="value">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        
                        <div class="info-item">
                            <label>الحالة:</label>
                            <span class="value status @(Model.IsActive ? "active" : "inactive")">
                                @(Model.IsActive ? "نشط" : "غير نشط")
                            </span>
                        </div>
                        
                        <div class="info-item">
                            <label>عدد المنتجات:</label>
                            <span class="value count">@Model.ProductsCount منتج</span>
                        </div>
                    </div>
                </div>

                @if (Model.Products != null && Model.Products.Any())
                {
                    <div class="products-section">
                        <h3>📦 المنتجات في هذا التصنيف</h3>
                        <div class="products-grid">
                            @foreach (var product in Model.Products.Take(6))
                            {
                                <div class="product-item">
                                    <div class="product-info">
                                        <h4>@product.Name</h4>
                                        <p class="product-details">
                                            <span class="detail">السعر: @product.Price.ToString("N2") جنيه</span>
                                            <span class="detail">الكمية: @product.Quantity</span>
                                        </p>
                                    </div>
                                    <div class="product-actions">
                                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" 
                                           class="action-btn info" title="عرض المنتج">👁️</a>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        @if (Model.Products.Count > 6)
                        {
                            <div class="more-products">
                                <p>و @(Model.Products.Count - 6) منتج آخر...</p>
                                <a asp-controller="Products" asp-action="Index" class="action-button primary">
                                    عرض جميع المنتجات
                                </a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="no-products">
                        <div class="empty-icon">📦</div>
                        <h4>لا توجد منتجات</h4>
                        <p>لم يتم إضافة أي منتجات لهذا التصنيف بعد</p>
                        <a asp-controller="Products" asp-action="Create" class="action-button success">
                            ➕ إضافة منتج جديد
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
/* Details Container Styles */
.details-container {
    max-width: 800px;
    margin: 2rem auto;
}

.details-card {
    background: var(--white);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
    border: 1px solid var(--border-color);
    overflow: hidden;
}

.details-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, var(--primary-green), var(--accent-green));
}

.details-header {
    background: linear-gradient(135deg, var(--light-gray), var(--white));
    padding: 2rem;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.details-header h2 {
    margin: 0;
    color: var(--dark-gray);
    font-size: 1.75rem;
    font-weight: 600;
}

.status-badge {
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.85rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.status-badge.active {
    background: rgba(40, 167, 69, 0.1);
    color: var(--success-green);
    border: 1px solid rgba(40, 167, 69, 0.3);
}

.status-badge.inactive {
    background: rgba(108, 117, 125, 0.1);
    color: var(--gray);
    border: 1px solid rgba(108, 117, 125, 0.3);
}

.details-content {
    padding: 2rem;
}

.info-section {
    margin-bottom: 2rem;
}

.info-section h3 {
    color: var(--dark-gray);
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--primary-green);
}

.info-grid {
    display: grid;
    gap: 1rem;
}

.info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(222, 226, 230, 0.3);
}

.info-item:last-child {
    border-bottom: none;
}

.info-item label {
    color: var(--gray);
    font-weight: 500;
    font-size: 0.9rem;
}

.info-item .value {
    color: var(--dark-gray);
    font-weight: 600;
    font-size: 0.95rem;
}

.info-item .value.description {
    max-width: 300px;
    text-align: right;
    font-style: italic;
}

.info-item .value.status.active {
    color: var(--success-green);
}

.info-item .value.status.inactive {
    color: var(--gray);
}

.info-item .value.count {
    color: var(--primary-green);
    font-weight: 700;
}

/* Products Section */
.products-section {
    margin-top: 2rem;
}

.products-section h3 {
    color: var(--dark-gray);
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--info-blue);
}

.products-grid {
    display: grid;
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.product-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: var(--light-gray);
    border-radius: var(--border-radius);
    border: 1px solid var(--border-color);
    transition: var(--transition);
}

.product-item:hover {
    background: var(--white);
    box-shadow: var(--shadow);
    transform: translateY(-2px);
}

.product-info h4 {
    margin: 0 0 0.5rem 0;
    color: var(--dark-gray);
    font-size: 1rem;
    font-weight: 600;
}

.product-details {
    margin: 0;
    display: flex;
    gap: 1rem;
    font-size: 0.85rem;
}

.product-details .detail {
    color: var(--gray);
}

.product-actions {
    display: flex;
    gap: 0.5rem;
}

.action-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    text-decoration: none;
    font-size: 0.9rem;
    transition: var(--transition);
    border: none;
    cursor: pointer;
}

.action-btn.info {
    background: rgba(52, 152, 219, 0.1);
    color: var(--info-blue);
    border: 1px solid rgba(52, 152, 219, 0.3);
}

.action-btn.info:hover {
    background: var(--info-blue);
    color: var(--white);
    transform: scale(1.1);
}

.more-products {
    text-align: center;
    padding: 1rem;
    background: var(--light-gray);
    border-radius: var(--border-radius);
    border: 1px solid var(--border-color);
}

.more-products p {
    margin: 0 0 1rem 0;
    color: var(--gray);
    font-size: 0.9rem;
}

/* No Products State */
.no-products {
    text-align: center;
    padding: 2rem;
    background: var(--light-gray);
    border-radius: var(--border-radius);
    border: 1px solid var(--border-color);
}

.empty-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    opacity: 0.7;
}

.no-products h4 {
    color: var(--dark-gray);
    margin-bottom: 0.5rem;
    font-weight: 600;
}

.no-products p {
    color: var(--gray);
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
}

/* Responsive Design */
media (max-width: 768px) {
    .details-container {
        margin: 1rem;
        max-width: none;
    }
    
    .details-header {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
        padding: 1.5rem;
    }
    
    .details-content {
        padding: 1.5rem;
    }
    
    .info-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
    }
    
    .product-item {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }
    
    .product-details {
        flex-direction: column;
        gap: 0.25rem;
    }
}

media (max-width: 576px) {
    .details-header {
        padding: 1rem;
    }
    
    .details-content {
        padding: 1rem;
    }
    
    .details-header h2 {
        font-size: 1.5rem;
    }
    
    .info-section h3,
    .products-section h3 {
        font-size: 1.1rem;
    }
}
</style>
